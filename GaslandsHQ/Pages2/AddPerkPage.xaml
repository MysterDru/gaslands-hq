<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GaslandsHQ.Pages2.AddPerkPage"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout
				Spacing="5">
            <Grid
				ColumnSpacing="0"
                RowSpacing="0">
                <Picker
						Title="Perk Type"
						ItemsSource="{Binding Perks}"
						SelectedItem="{Binding SelectedPerk}"
						ItemDisplayBinding="{Binding ptype}"
                        IsEnabled="{Binding CanSelect}"
						Grid.Column="0"
                        Grid.Row="0"/>

                <ContentView
                    Grid.Row="1">
                    <FlexLayout
					JustifyContent="Start"
					Wrap="Wrap"
                    VerticalOptions="Center"
                        Padding="10">
                        <ContentView
						Style="{x:StaticResource tag}">
                            <Label
							Text="{Binding Cost, StringFormat='Cost: {0}'}"
							HorizontalTextAlignment="Center"
							VerticalTextAlignment="Center" />
                        </ContentView>
                    </FlexLayout>
                </ContentView>

                <Label Text="{Binding Rules}" Padding="5" Grid.Row="2" TextColor="DarkGray"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
