<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GaslandsHQ.Pages2.AddWeaponPage"
             Visual="Material"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout
				Spacing="5">
            <Grid
				ColumnSpacing="0"
                RowSpacing="0">
                <Picker
						Title="Weapon Type"
						ItemsSource="{Binding Weapons}"
						SelectedItem="{Binding SelectedWeapon}"
						ItemDisplayBinding="{Binding wtype}"
                    IsEnabled="{Binding CanSelect}"
						Grid.Column="0"
                    Grid.Row="0"/>

                <Picker
                    Title="Facing"
					SelectedItem="{Binding Facing}"
                    IsEnabled="{Binding CanEditFacing}"
					Grid.Column="1"
                    Grid.Row="0">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Front</x:String>
                            <x:String>Sides</x:String>
                            <x:String>Rear</x:String>
                            <x:String>360</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>

            <ContentView>
                <FlexLayout
					JustifyContent="Start"
					Wrap="Wrap"
                    VerticalOptions="Center"
                        Padding="10">
                    <ContentView
						Style="{x:StaticResource tag}">
                        <Label
							Text="{Binding Cost, StringFormat='Cost: {0}'}"
							HorizontalTextAlignment="Center"
							VerticalTextAlignment="Center" />
                    </ContentView>
                    <ContentView
						Style="{x:StaticResource tag}">
                        <Label
							Text="{Binding Range, StringFormat='Range: {0}'}"
							HorizontalTextAlignment="Center"
							VerticalTextAlignment="Center" />
                    </ContentView>
                    <ContentView
						Style="{x:StaticResource tag}">
                        <Label
							Text="{Binding Attack, StringFormat='Attack: {0}'}"
							HorizontalTextAlignment="Center"
							VerticalTextAlignment="Center" />
                    </ContentView>
                    <ContentView
						Style="{x:StaticResource tag}">
                        <Label
							Text="{Binding Ammo, StringFormat='Ammo: {0}'}"
							HorizontalTextAlignment="Center"
							VerticalTextAlignment="Center" />
                    </ContentView>
                    <ContentView
						Style="{x:StaticResource tag}">
                        <Label
							Text="{Binding Slots, StringFormat='Slots: {0}'}"
							HorizontalTextAlignment="Center"
							VerticalTextAlignment="Center" />
                    </ContentView>
                </FlexLayout>
            </ContentView>

            <Label Text="{Binding SpecialRules}" Padding="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
